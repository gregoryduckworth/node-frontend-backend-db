generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id @default(uuid())
  firstName           String
  lastName            String
  email               String
  password            String
  dateOfBirth         DateTime? 
  refresh_token       String?
  reset_token         String?
  reset_token_expires DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}