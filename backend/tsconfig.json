{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@controller/*": ["src/controller/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@routes/*": ["src/routes/*"],
      "@types/*": ["src/types/*"],
      "@prismaClient/*": ["prisma/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "types": ["jest", "node"],
  "exclude": ["node_modules", "dist"]
}
